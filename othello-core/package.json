{
  "name": "othello-game",
  "version": "1.0.0",
  "description": "Othello game with the flexibility to create your own AI player.",
  "main": "./src/index.ts",
  "author": "Felipe de Assis Pinto <felipeap92@yahoo.com.br>",
  "license": "MIT",
  "keywords": [
    "othello",
    "reversi",
    "game"
  ],
  "scripts": {
    "start": "nodemon",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "watch": "run-s clean build && run-p \"build -- -w\" \"test -- --watch\"",
    "build": "run-s clean:build && tsc",
    "test": "run-s clean:coverage test:*",
    "test:lint": "tslint --project tsconfig.json -c tslint.json --format junit -o coverage/junit-lint-results.xml",
    "test:unit": "jest --ci",
    "test:unit:coverage": "jest --coverageReporters=lcov",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "clean": "run-p clean:*",
    "clean:build": "trash build",
    "clean:coverage": "trash coverage"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "coveralls": "^3.0.3",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "trash-cli": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typedoc": "^0.16.10",
    "typescript": "^3.5.1"
  }
}
